{
    "name": "fuel-pjax",
    "version": "1.0.5",
    "description": "Easily enable fast AJAX navigation on any website using pushState + XHR",
    "keywords": [
        "pjax",
        "pushstate",
        "ajax",
        "navigation",
        "transition",
        "animation"
    ],
    "repository": "https://github.com/Pageworks/fuel-pjax.git",
    "author": "Kyle Andrews",
    "contributors": [
        "Kyle Andrews (http://devkyle.com)"
    ],
    "license": "MIT",
    "main": "pjax.js",
    "files": [
        "src",
        "lib",
        "pjax.js",
        "pjax.js.map",
        "pjax.d.ts"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run precommit"
        }
    },
    "devDependencies": {
        "browserify": "^16.2.3",
        "cross-env": "^5.2.0",
        "husky": "^0.14.3",
        "npm-run-all": "^4.1.3",
        "opn-cli": "^3.1.0",
        "serve": "^10.0.2",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.9.2",
        "tslint-config-prettier": "^1.14.0",
        "typescript": "^3.0.1"
    },
    "scripts": {
        "lint": "cross-env NODE_ENV=development tslint src/**/*.ts -c .tslintrc.js -p tsconfig.json -t verbose",
        "precommit": "cross-env NODE_ENV=production tslint -c .tslintrc.js -p tsconfig.json -t verbose",
        "compile": "npm-run-all compile:*",
        "compile:typescript": "tsc",
        "compile:browserify": "browserify pjax.js --debug --standalone Pjax > ./example/index.js",
        "prerelease": "npm run compile:typescript && browserify pjax.js --standalone Pjax > ./_released/pjax-1.0.5.js",
        "example": "opn http://localhost:3000/example && serve -p 3000"
    }
}
